<div class="container">
  <p class="text-success"><%= notice %></p>

  <%= render @course %>

  <div class="mt-4">
    <%= link_to "Edit this course", edit_course_path(@course), class: "btn btn-primary me-2" %> |
    <%= link_to "Back to courses", courses_path, class: "btn btn-secondary me-2" %>

    <%= button_to "Destroy this course", @course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>
