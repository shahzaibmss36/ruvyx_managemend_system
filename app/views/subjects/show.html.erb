<div class="container">
  <p class="text-success"><%= notice %></p>

  <%= render @subject %>

  <div class="mt-4">
    <%= link_to "Edit this subject", edit_subject_path(@subject), class: "btn btn-primary me-2" %> |
    <%= link_to "Back to subjects", subjects_path, class: "btn btn-secondary me-2" %>

    <%= button_to "Destroy this subject", @subject, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>
