<div class="container">
  <p class="text-success"><%= notice %></p>

  <%= render @expense %>

  <div class="mt-4">
    <%= link_to "Edit this expense", edit_expense_path(@expense), class: "btn btn-primary me-2" %> |
    <%= link_to "Back to expenses", expenses_path, class: "btn btn-secondary me-2" %>

    <%= button_to "Destroy this expense", @expense, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>
