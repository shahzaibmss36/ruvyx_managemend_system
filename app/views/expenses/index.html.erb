<div class="container">
  <p class="text-success"><%= notice %></p>

  <h1 class="mb-4">Expenses</h1>

  <div id="expenses">
    <% @expenses.each do |expense| %>
      <div class="card mb-3">
        <%= render expense %>
        <div class="card-footer">
          <%= link_to "Show this expense", expense, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "New expense", new_expense_path, class: "btn btn-success" %>
</div>
