<div class="container">
  <p class="text-success"><%= notice %></p>

  <%= render @fund %>

  <div class="mt-4">
    <%= link_to "Edit this fund", edit_fund_path(@fund), class: "btn btn-primary me-2" %> |
    <%= link_to "Back to funds", funds_path, class: "btn btn-secondary me-2" %>

    <%= button_to "Destroy this fund", @fund, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>
